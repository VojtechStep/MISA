  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "yarn",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "args": [
        "build"
      ],
      "problemMatcher": "$tsc"
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "yarn",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": [
        "test"
      ]
    }
  ]
}
