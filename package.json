{
  "name": "misa",
  "version": "0.0.0-alpha.1",
  "description": "User management library. MISA IS not Auth0",
  "main": "index.js",
  "repository": "https://github.com/VojtechStep/MISA.git",
  "author": "Vojtech Stepancik <vojtechstepancik@outlook.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:tests": "tsc --project tsconfig-tests.json",
    "build:rules": "tsc ./devtools/tslint-rules/customSemiRule.ts --lib es6",
    "test": "yarn build && yarn build:tests && ava",
    "coverage": "yarn build:tests && nyc ava",
    "lint": "tslint -p tsconfig.json",
    "clean": "rimraf lib",
    "rebuild": "yarn clean && yarn build"
  },
  "devDependencies": {
    "@types/node": "^9.4.0",
    "ava": "^0.25.0",
    "mongodb-memory-server": "^1.6.5",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "tslint-language-service": "^0.9.8",
    "tsutils": "^2.21.0",
    "typescript": "^2.7.1"
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "typescript": true
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "sourceMap": true,
    "cache": true,
    "all": true
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "parser": "typescript"
  }
}
