{
  "name": "misa",
  "version": "0.0.0-alpha.1",
  "description": "User management library. MISA IS not Auth0",
  "main": "index.js",
  "repository": "https://github.com/VojtechStep/MISA.git",
  "author": "Vojtech Stepancik <vojtechstepancik@outlook.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:tests": "rimraf tests/**/*.js && tsc --project tsconfig-tests.json",
    "build:rules": "tsc ./devtools/tslint-rules/customSemiRule.ts --lib es6",
    "test": "yarn build && yarn build:tests && ava",
    "coverage:nobuild": "nyc ava && ./coverage/index.html",
    "coverage": "yarn build && yarn build:tests && yarn coverage:nobuild",
    "lint": "tslint -p tsconfig.json",
    "clean": "rimraf lib",
    "rebuild": "yarn clean && yarn build"
  },
  "dependencies": {
    "common-errors": "^1.0.5"
  },
  "devDependencies": {
    "@types/mongodb": "^3.0.5",
    "@types/node": "^9.4.6",
    "ava": "^0.25.0",
    "mongodb": "^3.0.3",
    "mongodb-memory-server": "^1.7.0",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-language-service": "^0.9.8",
    "tsutils": "^2.21.2",
    "typescript": "^2.7.2"
  },
  "peerDependencies": {
    "mongodb": "^3.0.2"
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "cache": true,
    "all": true
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "parser": "typescript"
  }
}
